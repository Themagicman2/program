class Car
{
    Class carlist
    {
        static void Main(string[] args)
        {
            int carval = 1;
    
            while (carval != 0)
            {
                Console.WriteLine("CarRegister");
                Console.WriteLine("==============");
                Console.WriteLine("1. Register New Car");
                Console.WriteLine("2. Print all cars in list");
                Console.WriteLine("0. End");
                Console.Write("Make your choice: ");
                carval = Convert.ToInt32(Console.ReadLine());

            }
        }
    }
    private string color;    
    private int year;
    private string model;
public string Color
    {
    get { return color; }
    set { color = value; }
    }
public int Year
    {
    get { return year; }
    set { year = value; }
    }
public string Model
    {
    get { return model; }
    set { model = value; }
    }
    public Car (string c, int y, string m)
        {
            color = c;
            year = y;
            model = m;
        }
}
class Program 
{
  static void Main(string[] args)
  {
    Car Ford = new Car("Red", 1969, "Mustang");
    Car Opel = new Car("White", 2005, "Astra");

    Console.WriteLine(Ford.Model);
    Console.WriteLine(Opel.Model);
    }
}
